					  </ul>
					</div><!--/.nav-collapse -->
				  </div>
				</div>
			  </div>

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
  <div class="col-md-3">
	  {{ form_widget(form. _token) }}
		<div class="form-group">
			<div>
				<label for="fos_user_profile_form_username" class="required">Nom d&#039;utilisateur</label>
				<input type="text" class="form-control" id="fos_user_profile_form_username" name="fos_user_profile_form[username]" required="required" maxlength="255" pattern=".{2,}" value="{{ app.user.username }}" />
			</div>
		</div>
		<div class="form-group">
			<div>
				<label for="fos_user_profile_form_email" class="required">Adresse e-mail</label>
				<input type="email" class="form-control" id="fos_user_profile_form_email" name="fos_user_profile_form[email]" required="required" value="{{ app.user.email }}"/></div>
			</div>
			<div class="form-group">
				<div>
					<label for="fos_user_profile_form_current_password" class="required">Mot de passe actuel</label>
					<input type="password" class="form-control" id="fos_user_profile_form_current_password" name="fos_user_profile_form[current_password]" required="required" />
				</div>
				<br>
				<div>
					<input type="submit" name="_submit" class="form-control" class="button-default" value="{{ 'profile.edit.submit'|trans({}, 'UserBundle') }}" />
				</div>
			</div>
		</div>
	</div>
</form>

{% endblock %}
